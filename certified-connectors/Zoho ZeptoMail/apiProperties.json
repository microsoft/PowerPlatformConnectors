{
  "properties": {
    "connectionParameters": {
      "token": {
        "type": "oauthSetting",
        "oAuthSettings": {
          "identityProvider": "oauth2generic",
          "clientId": "<Enter Your Client ID>",
          "scopes": [
            "transmail.accounts.READ",
            "transmail.email.CREATE",
            "transmail.mailagent.READ",
            "transmail.bounceSetup.READ",
            "transmail.domain.READ"
          ],
          "customParameters": {
            "authorizationUrlTemplate": {
              "value": "https://accounts.zoho{CustomHost}/oauth/v2/auth"
            },
            "authorizationUrlQueryStringTemplate": {
              "value": "?response_type=code&client_id={clientId}&redirect_uri={redirectUrl}&state={State}&scope={Scopes}&access_type=offline"
            },
            "tokenUrlTemplate": {
              "value": "https://accounts.zoho{CustomHost}/oauth/v2/token"
            },
            "tokenBodyTemplate": {
              "value": "code={code}&grant_type=authorization_code&redirect_uri={redirectUrl}&client_id={clientId}&client_secret={clientSecret}&access_type=offline&scope={Scopes}"
            },
            "refreshUrlTemplate": {
              "value": "https://accounts.zoho{CustomHost}/oauth/v2/token"
            },
            "refreshBodyTemplate": {
              "value": "code={code}&grant_type=refresh_token&refresh_token={refreshToken}&redirect_uri={redirectUrl}&client_id={clientId}&client_secret={clientSecret}&scope={Scopes}"
            }
          }
        }
      },
      "token:customHost": {
        "type": "string",
        "uiDefinition": {
          "constraints": {
            "required": "true",
            "tabIndex": 3,
            "allowedValues": [
              {
                "text": ".com",
                "value": ".com"
              },
              {
                "text": ".eu",
                "value": ".eu"
              },
              {
                "text": ".in",
                "value": ".in"
              },
              {
                "text": "com.au",
                "value": ".com.au"
              }
            ]
          },
          "displayName": "Select the region where your Zoho account data resides.",
          "description": "Select the domain."
        }
      }



    },

    "iconBrandColor": "#F2F6FF",
    "scriptOperations": [
      "get_mail_template",
      "send_mail",
      "send_template_mail"
    ],
    "capabilities": [],
    "policyTemplateInstances": [
      {
        "templateId": "dynamichosturl",
        "title": "Set host for connection",
        "parameters": {
          "x-ms-apimTemplateParameter.urlTemplate": "https://zeptomail.zoho@connectionParameters('token:customHost')"
        }
      }
    ],
    "publisher": "Zoho Corporation",
    "stackOwner": "Zoho Mail"
  }
}