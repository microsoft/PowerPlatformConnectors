          "200": {
            "description": "default response",
            "schema": {
              "type": "object",
              "properties": {
                "score": {
                  "type": "integer",
                  "format": "int32",
                  "description": "score"
                },
                "threat_object": {
                  "type": "object",
                  "properties": {
                    "sha256": {
                      "type": "string",
                      "description": "sha256 of file content"
                    }
                  },
                  "description": "threat object of the file scan result"
                },
                "scan_context": {
                  "type": "object",
                  "properties": {
                    "file_name": {
                      "type": "string",
                      "description": "scanned file name"
                    },
                    "client_id": {
                      "type": "string",
                      "description": "client Id of caller."
                    }
                  },
                  "description": "Json context of scan"
                },
                "datetime": {
                  "type": "number",
                  "format": "float",
                  "description": "Time of scan"
                },
                "status": {
                  "type": "string",
                  "description": "status of scan"
                },
                "account_id": {
                  "type": "string",
                  "description": "account id of the user scanned"
                },
                "api_key": {
                  "type": "string",
                  "description": "api key of caller"
                },
                "meta_data": {
                  "type": "object",
                  "properties": {
                    "plugin_info": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "description": "type of the plugin calling ScanCloud"
                        },
                        "name": {
                          "type": "string",
                          "description": "name of the plugin"
                        }
                      },
                      "description": "plugin information"
                    },
                    "capability": {
                      "type": "string",
                      "description": "capability of scan"
                    },
                    "vendor_info": {
                      "type": "object",
                      "properties": {
                        "vendor_config_name": {
                          "type": "string",
                          "description": "vendor configuration name"
                        },
                        "entitlement_level": {
                          "type": "string",
                          "description": "entitlement level of scan"
                        },
                        "vendor": {
                          "type": "string",
                          "description": "vendor name"
                        },
                        "credits": {
                          "type": "integer",
                          "format": "int32",
                          "description": "credits of the user"
                        },
                        "params": {
                          "type": "object",
                          "properties": {},
                          "description": "params"
                        }
                      },
                      "description": "ScanCloud vendor information"
                    }
                  },
                  "description": "meta data of scan"
                },
                "report_id": {
                  "type": "string",
                  "description": "report id of result"
                },
                "verdict": {
                  "type": "string",
                  "description": "verdict, 'malware' or 'suspicious' indicate potential threat"
                  },
                "duration": {
                  "type": "number",
                  "format": "float",
                  "description": "duration taken in scan"
                },
                "user_report_url": {
                  "type": "string",
                  "description": "user report url that can be opened from browser."
                }
              }
            }
          }
        },
        "summary": "Scan files using ScanCloud",
        "operationId": "filescan",
        "parameters": [
          {
            "in": "header",
            "name": "x-api-key",
            "type": "string",
            "default": "",
            "required": false,
            "description": "ScanCloud API Key, which can be obtained from the ScanCloud portal",
            "x-ms-summary": "ScanCloud API Key"
          },
          {
            "in": "header",
            "name": "x-client-id",
            "type": "string",
            "default": "",
            "required": false,
            "description": "Client Id to distinguish the client",
            "x-ms-summary": "Client Id"
          },
          {
            "name": "body",
            "in": "body",
            "required": false,
            "schema": {
              "type": "object",
              "properties": {
                "filename": {
                  "type": "string",
                  "description": "File name of email",
                  "title": "File Name"
                },
                "filetype": {
                  "type": "string",
                  "description": "filetype of incoming file",
                  "title": "File Type",
                  "x-ms-visibility": "internal",
                  "default": "text/plain"
                },
                "cte": {
                  "type": "string",
                  "description": "Content Type of the input",
                  "title": "Content Type",
                  "default": "base64",
                  "x-ms-visibility": "internal"
                },
                "data": {
                  "type": "string",
                  "description": "Base64 encoded file contents",
                  "title": "File Data (Base64 encoded)"
                }
              },
              "required": [
                "data",
                "filename",
                "cte",
                "filetype"
              ]
            }
          }
        ],
        "description": "Scan files using ScanCloud",
        "consumes": [ "application/json" ]
      }
    },
