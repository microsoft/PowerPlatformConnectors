{
  "properties": {
    "connectionParameters": {
      "token": {
        "type": "oauthSetting",
        "oAuthSettings": {
          "identityProvider": "oauth2generic",
          "scopes": [],
          "redirectMode": "Global",
          "redirectUrl": "https://global.consent.azure-apim.net/redirect",
          "customParameters": {
            "authorizationUrlTemplate": {
              "value": "https://{region}.smartcommunications.cloud/one/oauth2Server/authorize"
            },
            "authorizationUrlQueryStringTemplate": {
              "value": "?response_type=code&client_id={customClientId}&redirect_uri={redirectUrl}&state={State}"
            },
            "tokenUrlTemplate": {
              "value": "https://{region}.smartcommunications.cloud/one/oauth2Server/token"
            },
            "tokenBodyTemplate": {
              "value": "code={code}&grant_type=authorization_code&redirect_uri={redirectUrl}&client_id={customClientId}&client_secret={customClientSecret}"
            },
            "refreshUrlTemplate": {
              "value": "https://{region}.smartcommunications.cloud/one/oauth2Server/token"
            },
            "refreshBodyTemplate": {
              "value": "code={code}&grant_type=refresh_token&refresh_token={refreshToken}&redirect_uri={redirectUrl}&client_id={customClientId}&client_secret={customClientSecret}"
            }
          }
        },
        "uiDefinition": {
          "displayName": "Login your credentials",
          "description": "Sign in with your Smart Communications credentials",
          "tooltip": "Provide Smart Communications credentials",
          "constraints": {
            "required": "true",
            "hidden": "false"
          }
        }
      },
      "token:region": {
        "type": "string",
        "uiDefinition": {
          "constraints": {
            "required": "true",
            "tabIndex": 3
          },
          "displayName": "Region",
          "description": "Enter Smart Communications region",
          "tooltip": "For example 'eu11' for eu11.smartcommunications.cloud"
        }
      },
      "token:customClientId": {
        "type": "string",
        "uiDefinition": {
          "constraints": {
            "required": "true",
            "tabIndex": 3
          },
          "description": "Enter OAuth Client Id",
          "displayName": "Client Id",
          "tooltip": "Client identification."
        }
      },
      "token:customClientSecret": {
        "type": "string",

        "uiDefinition": {
          "constraints": {
            "required": "true",
            "tabIndex": 3
          },
          "description": "Enter OAuth Client Secret",
          "displayName": "Client Secret",
          "tooltip": "Client secret"
        }
      }
    },
    "policyTemplateInstances": [
      {
        "templateId": "dynamichosturl",
        "title": "Set host for connection",
        "parameters": {
          "x-ms-apimTemplateParameter.urlTemplate": "https://@connectionParameters('token:region').smartcommunications.cloud"
        }
      }
    ],
    "iconBrandColor": "#97C93D",
    "capabilities": [],
    "publisher": "Smart Communications",
    "stackOwner": "Smart Communications"
  }
}