{
  "properties": {
    "connectionParameters": {
      "token": {
        "type": "oauthSetting",
        "oAuthSettings": {
          "identityProvider": "aad",
          "clientId": "{{ client id }}",
          "redirectMode": "Global",
          "redirectUrl": "https://global.consent.azure-apim.net/redirect",
          "properties": {
            "IsFirstParty": "False",
            "AzureActiveDirectoryResourceId": "{{ client id }}"
          },
          "customParameters": {
            "loginUri": {
              "value": "https://login.windows.net"
            },
            "tenantId": {
              "value": "common"
            },
            "resourceUri": {
              "value": "{{ client id }}"
            }
          }
        }
      },
      "token:TenantId": {
        "type": "string",
        "metadata": {
          "sourceType": "AzureActiveDirectoryTenant"
        },
        "uiDefinition": {
          "constraints": {
            "required": "false",
            "hidden": "true"
          }
        }
      },
      "contentgate-DnsName": {
        "type": "string",
        "uiDefinition": {
          "constraints": {
            "required": "true"
          },
          "description": "Specify the environment to connect to.",
          "displayName": "Content Gate Environment (DNS Subdomain)",
          "tooltip": "Provide the Content Gate Environment identifier."
        }
      }
    },
    "iconBrandColor": "#6EBF4A",
    "capabilities": [],
    "publisher": "AXtension",
    "stackOwner": "AXtension",
    "policyTemplateInstances": [
      {
        "templateId": "dynamichosturl",
        "title": "Route to Environment",
        "parameters": {
          "x-ms-apimTemplateParameter.urlTemplate": "https://@ConnectionParameters('contentgate-DnsName').content-gate.com"
        }
      }
    ]
  }
}
