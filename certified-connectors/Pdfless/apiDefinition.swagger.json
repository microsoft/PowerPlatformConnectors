  "paths": {
    "/v{version}/document-templates": {
      "get": {
        "tags": [
          "document templates"
        ],
        "summary": "List document templates",
        "description": "List document templates of current workspace",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "Page",
            "type": "integer",
            "description": "Page number",
            "x-ms-summary": "Page number",
            "default": 1,
            "required": true,
            "x-ms-visibility": "important"
          },
          {
            "in": "query",
            "name": "PageSize",
            "description": "Page size",
            "x-ms-summary": "Page size",
            "type": "integer",
            "default": 100,
            "required": true,
            "x-ms-visibility": "important"
          },
          {
            "in": "path",
            "name": "version",
            "required": true,
            "type": "string",
            "default": "1",
            "description": "API version",
            "x-ms-summary": "API version",
            "x-ms-visibility": "advanced",
            "x-ms-url-encoding": "single"
          }
        ],
        "responses": {
          "200": {
            "description": "PDF creation succeeded",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DocumentTemplateDto"
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "operationId": "ListDocumentTemplates",
        "x-ms-visibility": "internal"
      }
    },
    "/v{version}/pdfs": {
      "post": {
        "tags": [
          "pdf"
        ],
        "summary": "Create a new PDF document",
        "description": "Generate PDF based on template identifier and payload data",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "version",
            "required": true,
            "type": "string",
            "default": "1",
            "x-ms-summary": "API version",
            "description": "API version",
            "x-ms-visibility": "advanced",
            "x-ms-url-encoding": "single"
          },
          {
            "in": "body",
            "description": "The content of the PDF document",
            "name": "command",
            "schema": {
              "$ref": "#/definitions/GeneratePDFCommand"
            },
            "required": true,
            "x-ms-visibility": "important"
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/PDFDtoApiResult"
            }
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "x-ms-visibility": "important",
        "operationId": "CreatePDF"
      }
    }
