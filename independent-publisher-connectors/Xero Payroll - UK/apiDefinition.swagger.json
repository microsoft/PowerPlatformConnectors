                },
                "isOffPayrollWorker": {
                  "type": "boolean",
                  "description": "Describes whether the employee is an off-payroll worker Cannot be modified after initial creation.",
                  "title": "Is Off-Payroll Worker",
                  "enum": [
                    false,
                    true
                  ],
                  "default": false
                },
                "address": {
                  "type": "object",
