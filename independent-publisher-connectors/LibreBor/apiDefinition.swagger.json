          "type": "string",
          "example": "C/ CALLE DE EJEMPLO 12 2B (MALAGA).",
          "x-nullable": true
        },
        "begin_activity": {
          "type": "string",
          "format": "date",
          "x-nullable": true
        },
        "capital": {
          "type": "number",
          "example": 3000,
          "x-nullable": true
        },
        "purpose": {
          "type": "string",
          "example": "Servicios comerciales, telemarketing y postventa para empresa del sector de la automocion.",
          "x-nullable": true
        },
        "date_creation": {
          "type": "string",
          "format": "date",
