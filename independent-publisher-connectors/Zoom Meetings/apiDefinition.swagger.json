        "summary": "Create Meeting",
        "description": "For Creating Meetings",
        "operationId": "CreateMeeting",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": false,
            "schema": {
              "type": "object",
              "properties": {
                "topic": {
                  "type": "string",
                  "description": "topic"
                },
                "type": {
                  "type": "integer",
                  "format": "int32",
                  "description": "type"
                },
