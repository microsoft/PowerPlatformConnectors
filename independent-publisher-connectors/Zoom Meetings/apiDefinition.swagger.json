                },
                "duration": {
                  "type": "string",
                  "description": "duration"
                },
                "settings": {
                  "type": "object",
                  "properties": {
                    "host_video": {
                      "type": "boolean",
                      "description": "Whether to start meetings with the host video on",
                      "enum": [
                        true,
                        false
                      ]
                    },
                    "participant_video": {
