          "202": {
            "description": "default",
            "schema": {
              "type": "object",
              "properties": {
                "@odata.context": {
                  "type": "string",
                  "description": "The OData context..",
                  "title": "OData Context"
                },
                "newPassword": {
                  "type": "string",
                  "description": "The new password.",
                  "title": "New Password"
                }
              }
            }
          }
        },
        "summary": "Reset password",
        "description": "Reset a user's password.",
        "operationId": "PasswordResetPost",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "x-ms-summary": "ID",
            "x-ms-url-encoding": "single",
            "description": "The user identifier or UPN.",
            "required": true,
            "type": "string"
          },
          {
            "name": "passwordId",
            "in": "path",
            "x-ms-summary": "Password ID",
            "x-ms-url-encoding": "single",
            "description": "The password identifier.",
            "required": true,
            "type": "string",
            "x-ms-dynamic-values": {
              "operationId": "PasswordListGet",
              "value-path": "id",
              "value-collection": "value",
              "value-title": "id",
              "parameters": {
                "id": {
                  "parameter": "id"
                }
              }
            }
          },
          {
            "name": "body",
            "in": "body",
            "required": false,
            "schema": {
              "type": "object",
              "properties": {
                "newPassword": {
