                "value": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "description": "The identfier.",
                        "title": "ID"
                      },
                      "password": {
                        "type": "string",
                        "description": "The password.",
                        "title": "Password"
                      },
                      "createdDateTime": {
                        "type": "string",
                        "description": "The created date and time.",
                        "title": "Created Date Time"
                      }
                    }
                  },
                  "title": "Value"
                }
              }
            }
          }
        },
        "summary": "List password",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "x-ms-summary": "ID",
            "x-ms-url-encoding": "single",
            "description": "The user identifier or UPN.",
            "required": true,
            "type": "string"
          }
        ],
        "description": "Retrieve a list of the passwords registered to a user.",
        "operationId": "PasswordListGet",
        "x-ms-openai-data": {
          "openai-enabled": true,
          "operations": [
            {
              "operationId": "PasswordListGet",
              "x-ms-require-user-confirmation": false
            }
          ]
        }
      }
    },
