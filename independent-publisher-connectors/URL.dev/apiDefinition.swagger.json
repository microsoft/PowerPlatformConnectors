{
  "swagger": "2.0",
  "info": {
    "title": "URL.dev",
    "description": "Create a short, temporary, self-destructing link to a website or message.",
    "version": "1.0",
    "contact": {
      "name": "Troy Taylor",
      "url": "https://www.hitachisolutions.com",
